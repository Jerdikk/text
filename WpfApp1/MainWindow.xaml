<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <Label Content="File:" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
            <TextBlock Text="..." MinWidth="150" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        </DockPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <Button x:Name="loadDict" Content="Convert dict" Margin="5" MinWidth="80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="loadDict_Click"/>
            <Button x:Name="loadDictText" Content="Sort dict from text and save" Margin="5" MinWidth="80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="loadDictText_Click" />
            <Button x:Name="indexDict" Content="Index dicts" Margin="5" MinWidth="80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="indexDict_Click" />

            <Button x:Name="load" Content="Load text" Click="load_Click" MinWidth="80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5"/>

            <!--Button x:Name="loadDictXML" Content="Load dict from serialize" Margin="5" MinWidth="80" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="loadDictXML_Click" /-->
        </StackPanel>
        <DockPanel Grid.Column="1" Grid.Row="0">
            <Button x:Name="testNet" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Test on MNIST dataset" Click="testNet_Click"/>
        </DockPanel>
        <ListBox x:Name="lbTest" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>
